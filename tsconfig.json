{
    "compilerOptions": {
        "declaration": true,
        "outDir": "lib",
        "esModuleInterop": true,
        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "jsx": "react-jsx",
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__",
        "**/__mocks__"
    ]
}